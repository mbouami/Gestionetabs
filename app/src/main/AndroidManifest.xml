<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.gestionetabs.app">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.gestionetabs.app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.gestionetabs.app.EtabActivity"
            android:label="@string/title_activity_etab"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.gestionetabs.app.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.android.gestionetabs.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.android.gestionetabs.app.DetailEtabActivity"
            android:label="@string/title_activity_detail_etab"
            android:parentActivityName="com.example.android.gestionetabs.app.EtabActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EtabActivity" />
        </activity>
        <provider
            android:authorities="com.example.android.gestionetabs.app"
            android:name=".data.GestionetabProvider" />
    </application>

</manifest>